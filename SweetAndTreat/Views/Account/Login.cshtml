@{
  Layout = "_Layout";
}

@using SweetAndTreat.ViewModels

@model LoginViewModel
<h2>Log in with your account</h2>
<hr />
@using (Html.BeginForm())
{
  @Html.LabelFor(m => m.Email)
  @Html.TextBoxFor(m => m.Email, new { @required="required"})
  @Html.LabelFor(m => m.Password)
  @Html.TextBoxFor(m => m.Password, new { @required="required"})
  @Html.CheckBoxFor(m => m.RememberMe, new { @class="checkbox-inline" })
  @Html.Label("Remember me")
  <input type="submit" value="Log in" class="btn btn-default" />
}

<button class="btn btn-white">@Html.ActionLink("Home", "Index", "Home")</button>